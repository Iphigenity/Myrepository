<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <!-- package属性相当于导包 -->
<hibernate-mapping package="cn.QQWeb.domain">
	<class name="Sale_Visit" table="Sale_Visit">
		<!-- length配置长度，not-null配置非空 -->
		<!-- 主键 -->
		<id name="visit_id">
		<!-- 配置主键生成策略 -->
			<generator class="uuid"></generator>
		</id>
		<!-- 其余元素 -->
		<!-- 对象属性对应的列名 -->
		<property name="visit_time"></property>
		<property name="visit_interviewee"></property>
		<property name="visit_addr"></property>
		<property name="visit_detail"></property>
	
		<!-- 设置关联的类集合 
			 inverse属性true为不维护关系属性-->
		
		<!-- 配置一对多关系
			 name设置创建的多对多关联的实体类的集合属性名 -->
		<!-- <set name="linkMen" inverse="false">
			<key column="cusid" ></key>
			<one-to-many class="LinkMan" />
		</set> -->
		
		<!-- 配置多对一关系 -->
		<many-to-one name="user" column="uid" class="user" ></many-to-one>
		<many-to-one name="customer" column="cusid" class="Customer" ></many-to-one>
		
	</class>
	
</hibernate-mapping>